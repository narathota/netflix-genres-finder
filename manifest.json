{
  "name": "Netflix Genres Finder",
  "version": "1.0",
  "description": "Unlock hidden genres on Netflix",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "https://www.netflix.com/*"
      ],
      "js": [
        "js/content-js.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background-js.js"
    ]
  },
  "browser_action": {
    "default_title": "",
    "default_icon": "icon.ico"
  },
  "permissions": [
    "tabs",
    "input"
  ]
}
