{
  "name": "Netflix Genres Finder",
  "version": "1.0",
  "description": "Unlock hidden genres on Netflix",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/**"
      ],
      "js": [
        "js/netflix-url-modifier.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "extension-tray.html",
    "default_title": ""
  },
  "permissions": [
    "tabs"
  ]
}
